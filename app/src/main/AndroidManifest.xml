<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upc.eseiaat.pma.vutcompanion">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AdminActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".EliminateAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".AcceptAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".MyAccountActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".ResultsListActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".ResultsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".TestActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".NavDrawerHomeActivity"
            android:label="@string/title_activity_nav_drawer_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavDrawerTestActivity"
            android:label="@string/title_activity_nav_drawer_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavDrawerResultsListActivity"
            android:label="@string/title_activity_nav_drawer_results_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavDrawerMyAccountActivity"
            android:label="@string/title_activity_nav_drawer_my_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavDrawerAdminActivity"
            android:label="@string/title_activity_nav_drawer_admin"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.vutcompanion.AdminActivity">

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="185dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="acceptAccounts"
        android:text="Accept accounts"
        android:textColor="@color/colorText"
        android:textSize="17sp" />

    <Button
        android:id="@+id/eliminateButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/acceptButton"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="eliminateAccounts"
        android:text="Eliminate accounts"
        android:textColor="@color/colorText"
        android:textSize="17sp" />
</android.widget.RelativeLayout>
